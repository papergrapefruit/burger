<h1>Eat-Da-Burger!</h1>

<img src="/assets/img/burger.jpg" alt="">
<div class="container-fluid">

  <div class="row">
    <div class="col-sm-4">
      <h2>Burgers that are devoured!</h2>
      <ul style="list-style: none;">
        {{#each burgers}} {{#unless this.devoured}}
        <li>
          {{this.burger_name}}

          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button type="submit">EATIN' TIME!</button>
          </form>
        </li>
        {{/unless}} {{/each}
      </ul>
    </div>
    <div class="col-sm-4 col-sm-offset-4">
      <h2>Burgers that are undevoured!</h2>
    <ul style="list-style: none;">
      {{#each burgers}} {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">EAT UP!</button>
        </form>
      </li>
      {{/if}} {{/each}}
    </ul>
  </div>
  </div>
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h2>Add a Burger</h2>

    <form class="create-update-form" action="/"
      method="POST">

      <div class="form-group">
        <label for="bu" id="font-pretty">Burger Name:</label>
        <input type="text" id="bu" name="burger_name">
      </div>

      <div class="form-group">
        <label for="dev">Devoured?</label><br>
        <input type="radio" name="devoured" value="1"
          checked> Devoured!<br>
        <input type="radio" name="devoured" value="0">Stayin'
        Alive!
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>
</div>